{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "singleVnetObject": {
            "type": "object"
        },
        "nameDefaults": {
            "type": "string"
        },
        "baseUrl": {
            "type": "string"
        }
    },
    "variables": {
        "vnetBaseName": "[concat('VN-', parameters('env'),'-')]"
    },
    "resources": [
        {
            "apiVersion": "2018-01-01",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[concat(variables('vnetBaseName'), parameters('vnetObject')[string(copyIndex('vnetCopy'))].name)]",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetObject')[string(copyIndex('vnetCopy'))].addressSpace]"
                    ]
                }
            },
            "copy": {
                "name": "vnetCopy",
                "count": "[parameters('vnetObject').vnetCount]"
            }
        }
    ]
}
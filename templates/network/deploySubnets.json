{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "singleVnetObject": {
            "type": "object"
        },
        "vnetName": {
            "type": "string"
        }
    },
    "resources": [
        {
            "apiVersion": "2017-10-01",
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "name": "[concat(parameters('vnetName'), '/', if(equals(parameters('singleVnetObject').subnets[string(copyIndex('subnetCopy'))].name, 'GatewaySubnet'), 'GatewaySubnet' , parameters('singleVnetObject').subnets[string(copyIndex('subnetCopy'))].name))]",
            "properties": {
                "addressPrefix": "[parameters('singleVnetObject').subnets[string(copyIndex('subnetCopy'))].network]"
            },
            "copy": {
                "name": "subnetCopy",
                "count": "[parameters('singleVnetObject').subnetCount]",
                "mode": "Serial"
            }
        }
    ]
}
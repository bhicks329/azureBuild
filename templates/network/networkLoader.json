{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "baseSettings": {
            "type": "object"
        },
        "networkObject": {
            "type": "secureObject"
        },
        "sasToken": {
            "type": "securestring"
        }
    },
    "variables": {
        "nameDefaults": {
            "vnetBaseName": "[concat('vn-', parameters('basesettings').env,'-')]"
        },
        "vnetDeployTemplate": "[concat(parameters('baseSettings').baseUrl, 'vnet/vnetDeploy.json',  parameters('sasToken'))]",
        "vnetPeerDeployTemplate": "[concat(parameters('baseSettings').baseUrl, 'vnet/vnetPeerDeploy.json',  parameters('sasToken'))]",
        "erConnectionLoaderTemplate": "[concat(parameters('baseSettings').baseUrl, 'vnet/erConnectionLoader.json',  parameters('sasToken'))]",
        "vpnConnectionDeployTemplate": "[concat(parameters('baseSettings').baseUrl, 'vnet/vpnConnectionDeploy.json',  parameters('sasToken'))]"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "[concat('lnk-vnetDeploy-', variables('nameDefaults').vnetBaseName, parameters('networkObject').vNets[copyIndex()].name)]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vnetDeployTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "singleVnetObject": {
                        "value": "[parameters('networkObject').vNets[copyIndex()]]"
                    },
                    "vnetName": {
                        "value": "[concat(variables('nameDefaults').vnetBaseName, parameters('networkObject').vNets[copyIndex()].name)]"
                    },
                    "sasToken": {
                        "value": "[parameters('sasToken')]"
                    },
                    "env": {
                        "value": "[parameters('baseSettings').env]"
                    }
                }
            },
            "copy": {
                "name": "lnkvnetCopy",
                "count": "[length(parameters('networkObject').vNets)]"
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[concat('lnk-vnetPeer-', variables('nameDefaults').vnetBaseName, parameters('networkObject').vNets[copyIndex()].name, '-', copyIndex())]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vnetPeerDeployTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "singleVnetObject": {
                        "value": "[parameters('networkObject').vNets[copyIndex()]]"
                    },
                    "vnetName": {
                        "value": "[concat(variables('nameDefaults').vnetBaseName, parameters('networkObject').vNets[copyIndex()].name)]"
                    },
                    "nameDefaults": {
                        "value": "[variables('nameDefaults')]"
                    }
                }
            },
            "dependsOn": [
                "lnkvnetCopy"
            ],
            "copy": {
                "name": "lnkpeerCopy",
                "count": "[length(parameters('networkObject').vNets)]",
                "mode": "Parallel"
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[concat('lnk-vpnConnection-', variables('nameDefaults').vnetBaseName, parameters('networkObject').vNets[copyIndex()].name, '-', copyIndex())]",
            "type": "Microsoft.Resources/deployments",
            "condition": "[greater(length(parameters('networkObject').vNets[copyindex()].vpnConnections), 0)]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vpnConnectionDeployTemplate')]"
                },
                "parameters": {
                    "singleVnetObject": {
                        "value": "[parameters('networkObject').vNets[copyindex()]]"
                    },
                    "vnetName": {
                        "value": "[concat(variables('nameDefaults').vnetBaseName, parameters('networkObject').vNets[copyIndex()].name)]"
                    }
                }
            },
            "copy": {
                "name": "ConnectionCopy",
                "count": "[length(parameters('networkObject').vNets)]",
                "mode": "Parallel"
            },
            "dependsOn": [
                "lnkvnetCopy"
            ]
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[concat('lnk-erConnectionLoader-', variables('nameDefaults').vnetBaseName, parameters('networkObject').vNets[copyIndex()].name)]",
            "type": "Microsoft.Resources/deployments",
            "condition": "[greater(length(parameters('networkObject').vNets[copyindex()].erConnections), 0)]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('erConnectionLoaderTemplate')]"
                },
                "parameters": {
                    "singleVnetObject": {
                        "value": "[parameters('networkObject').vNets[copyindex()]]"
                    },
                    "vnetName": {
                        "value": "[concat(variables('nameDefaults').vnetBaseName, parameters('networkObject').vNets[copyIndex()].name)]"
                    },
                    "env": {
                        "value": "[parameters('baseSettings').env]"
                    },
                    "sasToken": {
                        "value": "[parameters('sasToken')]"
                    }
                }
            },
            "copy": {
                "name": "erConnectionCopy",
                "count": "[length(parameters('networkObject').vNets)]",
                "mode": "Parallel"
            },
            "dependsOn": [
                "lnkvnetCopy"
            ]
        }
    ]
}
{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "peer": {
      "type": "object"
    },
    "vnetName": {
      "type": "string"
    },
    "remoteVnetName": {
      "type": "string"
    }
  },
  "resources": [
    {
      "name": "[concat(parameters('vnetName'), '/', parameters('remoteVnetName'))]",
      "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
      "apiVersion": "2017-10-01",
      "properties": {
        "allowVirtualNetworkAccess": "[bool(parameters('peer').allowVnet)]",
        "allowForwardedTraffic": "[bool(parameters('peer').allowForwarded)]",
        "useRemoteGateways": "[bool(parameters('peer').useRemoteGW)]",
        "remoteVirtualNetwork": {
          "id": "[resourceid('Microsoft.Network/virtualNetworks', parameters('remoteVnetName'))]"
        },
        "remoteAddressSpace": {
          "addressPrefixes": [
            "[reference(concat('Microsoft.Network/virtualNetworks/', parameters('remoteVnetName')), '2017-10-01').addressSpace.addressPrefixes]"
          ]
        }
      }
    }
  ]
}
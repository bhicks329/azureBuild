{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "singleVnetObject": {
            "type": "secureObject"
        },
        "vnetName": {
            "type": "string"
        },
        "sasToken": {
            "type": "securestring"
        }
    },
    "variables": {
        "subnetCollectorTemplateUri": "[concat(uri(deployment().properties.templateLink.uri, 'subnetCollector.json'), parameters('sasToken'))]",
        "deployVNGTemplateUri": "[concat(uri(deployment().properties.templateLink.uri, 'deployVNG.json'), parameters('sasToken'))]"
    },
    "resources": [
        {
            "apiVersion": "2015-01-01",
            "name": "[concat('lnk-', parameters('vnetName'), '-subnetCollector')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('subnetCollectorTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "source": {
                        "value": "[parameters('singleVnetObject')]"
                    },
                    "transformTemplateUri": {
                        "value": "[concat(uri(deployment().properties.templateLink.uri, 'subnetTransform.json'), parameters('sasToken'))]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-10-01",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[toLower(parameters('vnetName'))]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": "[parameters('SingleVnetObject').addressPrefixes]"
                },
                "subnets": "[reference(concat('lnk-', parameters('vnetName'), '-subnetCollector')).outputs.result.value]"
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[concat('lnk', '-', parameters('singleVnetObject').name, '-vng')]",
            "type": "Microsoft.Resources/deployments",
            "condition": "[or(equals(parameters('singleVnetObject').isVPNGW, bool('true')), equals(parameters('singleVnetObject').isERGW, bool('true')))]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('deployVNGTemplateUri')]"
                },
                "parameters": {
                    "vnetName": {
                        "value": "[parameters('vnetName')]"
                    },
                    "singleVnetObject": {
                        "value": "[parameters('singleVnetObject')]"
                    }
                }
            },
            "dependsOn": [
                "[concat('lnk-', parameters('vnetName'), '-subnetCollector')]"
            ]
        }
    ]
}
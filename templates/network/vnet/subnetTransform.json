{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "state": {
            "type": "array",
            "defaultValue": []
        },
        "source": {
            "type": "object"
        },
        "vnetName": {
            "type": "string"
        }
    },
    "variables": {
        "instance": [
            {
                "name": "[toLower(if(equals(toLower(parameters('source').name), 'gatewaysubnet'), 'GatewaySubnet', concat(parameters('vnetName'), '-', parameters('source').name)))]",
                "properties": {
                    "addressPrefix": "[parameters('source').addressPrefix]"
                }
            }
        ]
    },
    "resources": [],
    "outputs": {
        "collection": {
            "type": "array",
            "value": "[concat(parameters('state'), variables('instance'))]"
        }
    }
}
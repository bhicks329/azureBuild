{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "singleVnetObject": {
            "type": "secureObject"
        },
        "vnetName": {
            "type": "string"
        },
        "nameDefaults": {
            "type": "object"
        }
    },
    "variables": {
    },
    "resources": [
        {
            "name": "[tolower(concat(parameters('vnetName'), '/', parameters('nameDefaults').vnetBaseName, parameters('singleVnetObject').virtualNetworkPeerings[copyIndex()].remoteVirtualNetwork.name))]",
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "apiVersion": "2018-01-01",
            "properties": {
                "allowForwardedTraffic": "[parameters('singleVnetObject').virtualNetworkPeerings[copyIndex()].allowForwardedTraffic]",
                "useRemoteGateways": "[parameters('singleVnetObject').virtualNetworkPeerings[copyIndex()].useRemoteGateways]",
                "allowGatewayTransit": "[parameters('singleVnetObject').virtualNetworkPeerings[copyIndex()].allowGatewayTransit]",
                "remoteVirtualNetwork": {
                    "id": "[resourceid('Microsoft.Network/virtualNetworks', concat(parameters('nameDefaults').vnetBaseName, parameters('singleVnetObject').virtualNetworkPeerings[copyIndex()].remoteVirtualNetwork.name))]"
                }
            },
            "copy": {
                "name": "peerCopy",
                "count": "[length(parameters('singleVnetObject').virtualNetworkPeerings)]",
                "mode": "Serial"
            }
        }
    ]
}
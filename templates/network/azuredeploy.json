{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "env": {
            "type": "string",
            "defaultValue": "DEV",
            "allowedValues": [
                "DEV",
                "PRD"
            ],
            "metadata": {
                "description": "The code of your environment"
            }
        },
        "sasToken": {
            "type": "string",
            "defaultValue": ""
        },
        "baseUrl": {
            "type": "string",
            "defaultValue": ""
        }
    },
    "variables": {
        "vnet": {
            "vnetcount": 1,
            "0": {
                "name": "MGMT-1",
                "addressSpace": "10.0.0.0/16",
                "subnetcount": 1,
                "subnet": {
                    "0": {
                        "name": "dmz",
                        "network": "10.0.1.0/24"
                    }
                }
            }
        }
    },
    "resources": [
        {
            "apiVersion": "2015-01-01",
            "name": "linkedVnetTemplate",
            "type": "Microsoft.Resources/deployments",
            "copy": {
                "name": "subnetCopy",
                "count": "[variables('vnet')[string(copyIndex('vnetCopy'))].vnetcount]"
            },
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('baseUrl'), 'deployVnets.json',  parameters('sasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vnets": {
                        "value": "[variables('vnets')]"
                    },
                    "env": {
                        "value": "[parameters('env')]"
                    }
                }
            }
        },
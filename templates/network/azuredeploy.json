{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "env": {
            "type": "string",
            "defaultValue": "DEV",
            "allowedValues": [
                "DEV",
                "PRD"
            ],
            "metadata": {
                "description": "The specific environment to be deployed to"
            }
        },
        "sasToken": {
            "type": "string",
            "defaultValue": ""
        },
        "baseUrl": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/bhicks329/azureBuild/master/templates/network/"
        }
    },
    "variables": {
        "vnetObject": {
            "vnetCount": 3,
            "0": {
                "name": "MGMT-1",
                "addressSpace": "10.0.0.0/16",
                "subnetCount": 5,
                "subnet": {
                    "0": {
                        "name": "GatewaySubnet",
                        "network": "10.0.0.0/24"
                    },
                    "1": {
                        "name": "DMZ-1",
                        "network": "10.0.1.0/24"
                    },
                    "2": {
                        "name": "VM-1",
                        "network": "10.0.2.0/24"
                    },
                    "3": {
                        "name": "SECURE-1",
                        "network": "10.0.3.0/24"
                    },
                    "4": {
                        "name": "OTHER-1",
                        "network": "10.0.4.0/24"
                    }
                },
                "peerCount": 2,
                "peering": {
                    "0": {
                        "remoteVnet": "SERVER-1",
                        "allowVnet": "True",
                        "allowForwarded": "True",
                        "useRemoteGW": "False" 
                    },
                    "1": {
                        "remoteVnet": "TEST-1",
                        "allowVnet": "True",
                        "allowForwarded": "True",
                        "useRemoteGW": "False" 
                    }
                }
            },
            "1": {
                "name": "SERVER-1",
                "addressSpace": "10.1.0.0/16",
                "subnetCount": 2,
                "subnet": {
                    "0": {
                        "name": "GatewaySubnet",
                        "network": "10.1.0.0/24"
                    },
                    "1": {
                        "name": "DMZ",
                        "network": "10.1.1.0/24"
                    }
                },
                "peerCount": 1,
                "peering": {
                    "0": {
                        "remoteVnet": "MGMT-1",
                        "allowVnet": "True",
                        "allowForwarded": "True",
                        "useRemoteGW": "False" 
                    }
                }
            },
            "2": {
                "name": "TEST-1",
                "addressSpace": "10.2.0.0/16",
                "subnetCount": 2,
                "subnet": {
                    "0": {
                        "name": "GatewaySubnet",
                        "network": "10.2.0.0/24"
                    },
                    "1": {
                        "name": "DMZ",
                        "network": "10.2.1.0/24"
                    }
                },
                "peerCount": 1,
                "peering": {
                    "0": {
                        "remoteVnet": "MGMT-1",
                        "allowVnet": "True",
                        "allowForwarded": "True",
                        "useRemoteGW": "False" 
                    }
                }
            }
        }
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "[concat('lnk-', variables('vnetObject')[string(copyIndex('vnetCopy'))].name, '-', copyIndex())]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('baseUrl'), 'deployVnets.json',  parameters('sasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vnet": {
                        "value": "[variables('vnetObject')]"
                    },
                    "env": {
                        "value": "[parameters('env')]"
                    },
                    "baseUrl": {
                        "value": "[parameters('baseUrl')]"
                    }
                }
            },
            "copy": {
                "name": "vnetCopy",
                "count": "[variables('vnetObject').vnetCount]",
                "mode": "Serial"
            }
        }
    ]
}
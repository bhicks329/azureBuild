{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "singleVnetObject": {
            "type": "object"
        },
        "vnetName": {
            "type": "string"
        }
    },
    "variables": {
        "vnetAddressSpace": "[parameters('singleVnetObject').addressSpace]",
        "subnets": {
            "copy": [
                {
                    "name": "subnets",
                    "count": "[parameters('singleVnetObject').subnetCount]",
                    "input": {
                        "name": "[concat(if(equals(parameters('singleVnetObject').subnet[string(copyIndex('subnets'))].name, 'GatewaySubnet'), 'GatewaySubnet' , concat(parameters('vnetName'), '-', parameters('singleVnetObject').subnet[string(copyIndex('subnets'))].name)))]",
                        "properties": {
                            "addressPrefix": "[parameters('singleVnetObject').subnet[string(copyIndex('subnets'))].network]"
                        }
                    }
                }
            ]
        }
    },
    "resources": [
        {
            "apiVersion": "2018-01-01",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('vnetName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('vnetAddressSpace')]"
                    ]
                },
                "subnets": "[variables('subnets')]"
            }
        }
    ]
}
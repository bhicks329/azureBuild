{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "singleVnetObject": {
            "type": "object"
        },
        "nameDefaults": {
            "type": "object"
        },
        "baseUrl": {
            "type": "string"
        }
    },
    "variables": {
        "vnetBaseName": "[parameters('nameDefaults').vnetBaseName]",
        "vnetName": "[concat(variables('vnetBaseName'), parameters('singleVnetObject').name)]",
        "vnetAddressSpace": "[parameters('singleVnetObject').addressSpace]",
        "copy": [
            {
                "name": "subnets",
                "count": "[parameters('singleVnetObject').subnetCount]",
                "input": {
                    "name": "[if(equals(parameters('singleVnetObject').subnet[string(copyIndex('subnetCopy'))].name, 'GatewaySubnet'), 'GatewaySubnet' , concat(variables('vnetName'), '-', parameters('singleVnetObject').subnet[string(copyIndex('subnetCopy'))].name))]",
                    "properties": {
                        "addressPrefix": "[parameters('singleVnetObject').subnet[string(copyIndex('subnets'))].network]"
                    }
                }
            }
        ]
    },
    "resources": [
        {
            "apiVersion": "2018-01-01",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('vnetName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('vnetAddressSpace')]"
                    ]
                },
                "subnets": "[variables('subnets')]"
            }
        }
    ]
    
}
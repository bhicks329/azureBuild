{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnet": {
            "type": "object"
        },
        "env": {
            "type": "string"
        }
    },
    "resources": [
        {
            "apiVersion": "2018-01-01",
            "type": "Microsoft.Network/virtualNetworks",
            "copy": {
                "name": "vnetCopy",
                "count": "[parameters('vnet').vnetcount]"
            },
            "name": "[concat('VN-', parameters('env'),'-', parameters('vnet').name)]",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[concat('VN-', parameters('env'),'-', parameters('vnet').addressSpace)]"
                    ]
                }
            }
        }
    ]
}
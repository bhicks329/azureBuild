{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnet": {
            "type": "object"
        },
        "env": {
            "type": "string"
        },
        "baseUrl": {
            "type": "string"
        }
    },
    "variables": {
        "vnetBaseName": "[concat('VN-', parameters('env'),'-')]",
        "vnetName": "[concat(variables('vnetBaseName'), parameters('vnet').name)]"
    },
    "resources": [
        {
            "apiVersion": "2018-01-01",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('vnetName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnet').addressSpace]"
                    ]
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[concat('lnk', '-', variables('vnetName'), '-SN-', copyIndex('subnetCopy'))]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('baseUrl'), 'deploySubnets.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vnetName": {
                        "value": "[variables('vnetName')]"
                    },
                    "subnet": {
                        "value": "[parameters('vnet').subnet[string(copyindex(''))]]"
                    }
                }
            },
            "copy": {
                "name": "subnetCopy",
                "count": "[parameters('vnet').subnetCount]",
                "mode": "Serial"
            },
            "dependsOn": [
                "[variables('vnetName')]"
            ]
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[concat('lnk-', variables('vnetName'), '-PEER-' )]",
            "type": "Microsoft.Resources/deployments",
            "condition": "[bool(contains(parameters('vnet'), 'peerCount'))]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('baseUrl'), 'deployPeering.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "vnetName": {
                        "value": "Alice"
                    },
                    "peer": {
                        "value": "Bob"
                    },
                    "remoteVnetName": {
                        "value": "Jeff"
                    }
                }
            },
            "dependsOn": [
                "[variables('vnetName')]"
            ]
        }
    ]
}
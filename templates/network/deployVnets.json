{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "singleVnetObject": {
            "type": "object"
        },
        "nameDefaults": {
            "type": "object"
        },
        "baseUrl": {
            "type": "string"
        }
        
    },
    "variables": {
        "vnetBaseName": "[parameters('nameDefaults').vnetBaseName]",
        "vnetName": "[concat(variables('vnetBaseName'), parameters('singleVnetObject').name)]",
        "vnetAddressSpace": "[parameters('singleVnetObject').addressSpace]"
    },
    "resources": [
        {
            "apiVersion": "2018-01-01",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('vnetName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('vnetAddressSpace')]"
                    ]
                },
                "subnets": [           
                    {
                        "name": "[parameters('singleVnetObject').subnet[string(copyIndex('subnetCopy'))].name]",
                        "properties": {
                            "addressPrefix": "[parameters('singleVnetObject').subnet[string(copyIndex('subnetCopy'))].network]"
                        }
                    }
                ],
                "copy": {
                    "name": "subnetCopy",
                    "count": "[parameters('singleVnetObject').subnetCount]",
                    "mode": "Serial"
                }
            }
        }
        
    ]
}